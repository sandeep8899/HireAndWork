<table border="2">
	<% if @projects.count==0 %>
		<tr>
			<td>
				<h4> No project Found! </h4>
			</td>
		</tr>
	<% else %>
		<tr>
			<th>
			 	Sr. No.
			</th>
			<th>
				Project Name
			</th>
			<th>
				Skill Need
			</th>
			<% if current_user.type == "User" %>
				<th>
					Time Period
				</th>
				<th>
					Last Bid
				</th>
			<% end %>
			<th>
				Actions
			</th>
		</tr>
		<% i=0 %>
		<% @projects.each do |project| %>
			<tr>
				<td>
					<%=i=getSrNo(i) %>
				</td>
				<td>
					<%= project.name %>
				</td>
				<td>
					<%= project.skills %>
				</td>
				<% if current_user.type == "User" %>
					<td>
						<%= project.time_period %>
					</td>
					<td>
						<% if project.bids.count > 0 %>
							<%= project.bids.last.amount %>
						<% else %>
							Make First Bid
						<% end %>
					</td>
				<% end %>
				<td>
					<%= link_to "view details" , project_path(project.id) %>
				</td>
			</tr>
		<% end %>
	<% end %>
</table>	