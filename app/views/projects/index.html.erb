<table border="2">
	<% if @projects.count==0 %>
		<tr>
			<td>
				<h4> No project Found! </h4>
			</td>
		</tr>
	<% else %>
		<tr>
			<th>
			 	Sr. No.
			</th>
			<th>
				Project Name
			</th>
			<th>
				Skill Need
			</th>
			<% if current_user.type=="Client" %>
				<th>
					Status
				</th>
			<% end %>
			<th>
				Actions
			</th>
		</tr>
		<% i=0 %>
		<% @projects.each do |project| %>
			<tr>
				<td>
					<%= i=getSrNo(i) %>
				</td>
				<td>
					<%= project.name %>
				</td>
				<td>
					<%= project.skills %>
				</td>
				<% if current_user.type=="Client" %>
					<td>
						<%= project.status %>
					</td>
				<% end %>
				<td>
					<%= link_to "view details" , project_path(project.id) %>

					<% if current_user.type == "User" %>
						<%= link_to "apply" , apply_project_path(project.id) %>
					<% end %>
				</td>
			</tr>
		<% end %>
	<% end %>
</table>	